{
  "name": "vs-angelscript-debug",
  "displayName": "AngelScript Debugger",
  "version": "0.0.1",
  "publisher": "eguskov",
  "description": "AngelScript Debugger",
  "license": "MIT",
  "keywords": [
    "debugger",
    "angelscript"
  ],
  "engines": {
    "vscode": "^1.22.0",
    "node": "^8.9.3"
  },
  "categories": [
    "Debuggers"
  ],
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/eguskov/ecs"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b ./src",
    "watch": "tsc -b -w ./src",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "dependencies": {
    "await-notify": "1.0.1",
    "vscode-debugadapter": "1.33.0",
    "websocket": "^1.0.28",
    "bson": "^4.0.1"
  },
  "devDependencies": {
    "@types/node": "8.9.3",
    "@types/websocket": "0.0.40",
    "tslint": "5.11.0",
    "typescript": "3.1.6",
    "vsce": "1.53.2",
    "vscode": "1.1.21",
    "vscode-debugadapter-testsupport": "1.33.0"
  },
  "main": "./out/extension",
  "activationEvents": [
    "onLanguage:angelscript",
    "onDebugInitialConfigurations",
    "onDebugResolve:angelscript"
  ],
  "contributes": {
    "breakpoints": [
      {
        "language": "angelscript"
      }
    ],
    "debuggers": [
      {
        "type": "angelscript",
        "label": "AngelScript Debug",
        "program": "./out/debugAdapter.js",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Absolute path to a text file.",
                "default": "${workspaceFolder}/${command:AskForProgramName}"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch.",
                "default": true
              },
              "trace": {
                "type": "boolean",
                "description": "Enable logging of the Debug Adapter Protocol.",
                "default": true
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "angelscript",
            "request": "attach",
            "name": "Ask for file name",
            "program": "${workspaceFolder}/${command:AskForProgramName}",
            "stopOnEntry": true
          }
        ],
        "configurationSnippets": [
          {
            "label": "AngelScript Debug: Attach",
            "description": "A new configuration for 'debugging' a user selected AngelScript file.",
            "body": {
              "type": "angelscript",
              "request": "attach",
              "name": "Ask for file name",
              "program": "^\"\\${workspaceFolder}/\\${command:AskForProgramName}\"",
              "stopOnEntry": true
            }
          }
        ],
        "variables": {
          "AskForProgramName": "extension.mock-debug.getProgramName"
        }
      }
    ]
  }
}
